<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.primal.runs.ui.dashboard.home.model.GroupedPlanData"/>
        <variable
            name="pos"
            type="Integer" />
        <variable
            name="callback"
            type="com.primal.runs.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_5sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivElephant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            loadShapeableImage="@{bean.image}"
            android:src="@drawable/iv_dummy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeStroke10" />

        <!-- <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivElephant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_login_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeStroke10" />-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lock_stage_gradient"
            app:layout_constraintEnd_toEndOf="@+id/ivElephant"
            app:layout_constraintStart_toStartOf="@+id/ivElephant"
            app:layout_constraintTop_toTopOf="@+id/ivElephant"
            app:layout_constraintBottom_toBottomOf="@+id/ivElephant"
            app:shapeAppearance="@style/ShapeStroke10" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:alpha="0.6"
            android:background="@drawable/corner_radius_10"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/ivElephant"
            app:layout_constraintTop_toTopOf="@id/ivElephant">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDistance"
                style="@style/TextView.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/iv_location"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/colorAccent"
                android:padding="@dimen/_10sdp"
                android:text='@{bean.distancePlan.toString()+" "+bean.measureUnits+" plan"}'
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLevel"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Beginner 1"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toTopOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvStartPlan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/TextView.Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@{bean.title}"
                android:textAllCaps="true"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toTopOf="@id/tvProgress"
                app:layout_constraintStart_toStartOf="@id/tvStartPlan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProgress"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Progress"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toTopOf="@id/seekbar"
                app:layout_constraintStart_toStartOf="@id/tvStartPlan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProgressChange"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text='@{bean.progress.toString()+"%"}'
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toTopOf="@id/seekbar"
                app:layout_constraintEnd_toEndOf="@id/tvStartPlan" />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:maxHeight="@dimen/_8sdp"
                android:minHeight="@dimen/_8sdp"
                android:progress="@{(int) bean.progress}"
                android:progressDrawable="@drawable/seekbar_plan_progress"
                android:splitTrack="false"
                android:thumb="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@id/tvStartPlan"
                app:layout_constraintEnd_toEndOf="@id/tvStartPlan"
                app:layout_constraintStart_toStartOf="@id/tvStartPlan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStartPlan"
                style="@style/TextView.FuturaBold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/corner_radius_10"
                android:gravity="center"
                android:text="START PLAN"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>