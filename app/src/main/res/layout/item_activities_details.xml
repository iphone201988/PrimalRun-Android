<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.primal.runs.ui.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="bean"
            type="com.primal.runs.ui.dashboard.home_details.model.EasyStage" />

        <variable
            name="pos"
            type="Integer" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainCons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:onClick="@{v ->callback.onItemClick(v,bean,pos)}">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivElephant"
            loadShapeableImage="@{bean.image}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_act"
            setColorMatrix="@{bean.stageLock}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeStroke10" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_lock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/lock_stage_gradient"
            app:layout_constraintEnd_toEndOf="@+id/ivElephant"
            app:layout_constraintStart_toStartOf="@+id/ivElephant"
            app:layout_constraintTop_toTopOf="@+id/ivElephant"
            app:layout_constraintBottom_toBottomOf="@+id/ivElephant"
            app:shapeAppearance="@style/ShapeStroke10" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:numStars="3"
            android:rating="0"
            android:stepSize="0.1"
            android:theme="@style/RatingBar2"
            android:visibility="@{bean.difficultyLevel > 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLevel"
            style="@style/TextView.Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:alpha="0.8"
            android:gravity="start"
            android:text='@{"Beginner  "+ bean.level.toString() }'
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeading"
            style="@style/TextView.Heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="start"
            android:text="@{bean.title}"
            android:textAllCaps="true"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="@+id/tvLevel"
            app:layout_constraintTop_toBottomOf="@+id/tvLevel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLocation"
            style="@style/TextView.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:alpha="0.8"
            android:background="@drawable/corner_radius_10"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/iv_location"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/colorAccent"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text='@{bean.distance+" "+bean.measureUnits}'
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/tvLevel"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            style="@style/TextView.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:alpha="0.8"
            android:background="@drawable/corner_radius_10"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/iv_time"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/colorAccent"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@{bean.durationInMin + ` min`}"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvLocation"
            app:layout_constraintStart_toEndOf="@+id/tvLocation"
            app:layout_constraintTop_toTopOf="@+id/tvLocation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAverage"
            style="@style/TextView.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:alpha="0.8"
            android:background="@drawable/corner_radius_10"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/iv_run"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/colorAccent"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text='@{bean.speed+" min/"+bean.measureUnits}'
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/tvTime"
            app:layout_constraintTop_toTopOf="@+id/tvTime" />


